{% if pageCount > 1 %}
<div class="pagination">
    <ul>
    {% if previous is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;{{ 'Newer Posts'|trans }}</a>
        </li>
    {% endif %}


    {% if next is defined %}
        <li>
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'Older Posts'|trans }}&nbsp;&raquo;</a>
        </li>
    {% endif %}
    </ul>
</div>
{% endif %}
